# Production Trading System Environment Variables
# Complete configuration for paper trading

# ============================================
# INFRASTRUCTURE
# ============================================
# Your infrastructure API endpoint
# Local: http://localhost:8000
# Production: https://your-infrastructure.railway.app
INFRA_API=http://localhost:8000

# ============================================
# TRADING ENGINE
# ============================================
# Port for trading engine (don't change unless needed)
PORT=8001

# ============================================
# DATA SOURCES
# ============================================
# Polygon API - FREE TIER
# Get your free key at: https://polygon.io/dashboard/api-keys
# Limits: 5 calls/minute on free tier
# Leave blank to use only yfinance
POLYGON_API_KEY=

# YFinance settings (no API key needed - it's free!)
# Soft limit of 2000 requests per hour
YFINANCE_ENABLED=true

# ============================================
# CACHE CONFIGURATION
# ============================================
# Cache times in seconds - adjust based on needs
CACHE_TTL_QUOTES=60        # How long to cache stock quotes
CACHE_TTL_BARS=300         # How long to cache historical data
CACHE_TTL_SIGNALS=60       # How long to reuse generated signals
MAX_CACHE_SIZE=1000        # Maximum number of cached items

# ============================================
# RATE LIMITS (Don't change unless you upgrade)
# ============================================
YFINANCE_LIMIT=2000        # Per hour soft limit
YFINANCE_PERIOD=3600       # 1 hour in seconds
POLYGON_LIMIT=5            # Per minute (free tier)
POLYGON_PERIOD=60          # 1 minute in seconds

# ============================================
# TRADING CONFIGURATION
# ============================================
# Position sizing
DEFAULT_POSITION_SIZE=100   # Default shares per trade
MAX_POSITION_SIZE=500      # Maximum shares per trade
POSITION_RISK_PERCENT=10   # Max % of portfolio per position
MAX_POSITIONS=5            # Maximum concurrent positions

# Scanning and execution
SCAN_INTERVAL=60           # Seconds between market scans
AUTO_TRADE_ENABLED=false   # Set to true for auto-execution
PAPER_TRADING=true         # Always start with paper trading!

# ============================================
# VOLATILITY ZONES (Eastern Time)
# ============================================
# Opening Bell - High volatility, best opportunities
OPENING_BELL_START=09:30
OPENING_BELL_END=10:00
OPENING_BELL_MULTIPLIER=1.8
OPENING_BELL_THRESHOLD=0.30

# Morning Reversal
MORNING_REVERSAL_START=10:00
MORNING_REVERSAL_END=10:30
MORNING_REVERSAL_MULTIPLIER=1.3
MORNING_REVERSAL_THRESHOLD=0.35

# Midday - Lower activity
MIDDAY_START=10:30
MIDDAY_END=14:00
MIDDAY_MULTIPLIER=1.1
MIDDAY_THRESHOLD=0.40

# Pre-Power Hour
PRE_POWER_START=14:00
PRE_POWER_END=15:00
PRE_POWER_MULTIPLIER=1.3
PRE_POWER_THRESHOLD=0.35

# Power Hour - Second best opportunity
POWER_HOUR_START=15:00
POWER_HOUR_END=15:50
POWER_HOUR_MULTIPLIER=1.5
POWER_HOUR_THRESHOLD=0.30

# Closing Cross - Maximum volatility
CLOSING_CROSS_START=15:50
CLOSING_CROSS_END=16:00
CLOSING_CROSS_MULTIPLIER=2.0
CLOSING_CROSS_THRESHOLD=0.25

# ============================================
# RISK MANAGEMENT
# ============================================
STOP_LOSS_PERCENT=2.0      # Stop loss at -2%
TAKE_PROFIT_PERCENT=3.0    # Take profit at +3%
TRAILING_STOP_PERCENT=1.5  # Trailing stop activation
MAX_DAILY_LOSS_PERCENT=5   # Stop trading after -5% daily loss
MAX_PORTFOLIO_RISK=0.20    # Maximum portfolio at risk

# ============================================
# MONITORING & ALERTS
# ============================================
LOG_LEVEL=INFO             # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true          # Save logs to file
LOG_FILE_PATH=./logs/trading.log
METRICS_ENABLED=true       # Track performance metrics
METRICS_FILE_PATH=./metrics/performance.json

# ============================================
# BROKER CONFIGURATION (Future)
# ============================================
# Alpaca Paper Trading (when ready)
ALPACA_PAPER_KEY=
ALPACA_PAPER_SECRET=
ALPACA_PAPER_BASE_URL=https://paper-api.alpaca.markets

# Alpaca Live Trading (only after profitable paper trading!)
ALPACA_LIVE_KEY=
ALPACA_LIVE_SECRET=
ALPACA_LIVE_BASE_URL=https://api.alpaca.markets

# ============================================
# NOTIFICATION SETTINGS (Optional)
# ============================================
# Email alerts
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# Webhook for Slack/Discord
WEBHOOK_URL=
WEBHOOK_ENABLED=false

# ============================================
# DATABASE (Handled by Infrastructure)
# ============================================
# Don't set these here - infrastructure handles database
# SUPABASE_URL=
# SUPABASE_KEY=